    xml:id="create_program_rule_variable">
    <title>Create or edit a program rule variable</title>
    <orderedlist>
        <listitem>
            <para>Open the <emphasis role="bold">Maintenance</emphasis> app and click <emphasis
                    role="bold">Program</emphasis> > <emphasis role="bold">Program rule
                    variable</emphasis>.</para>
        </listitem>
        <listitem>
            <para>Click the add button.</para>
        </listitem>
        <listitem>
            <para>Select a <emphasis role="bold">Program</emphasis> and enter:<itemizedlist>
                    <listitem>
                        <para><emphasis role="bold">Name</emphasis></para>
                    </listitem>
                    <listitem>
                        <para><emphasis role="bold">Code</emphasis></para>
                    </listitem>
                </itemizedlist></para>
        </listitem>
        <?oxy_comment_start author="cecilia" timestamp="20170525T123318+0200" comment="An expl. of this option is needed."?>
        <listitem>
            <para>Select if you want to <emphasis role="bold">Use code for option
                set</emphasis>.</para>
        </listitem>
        <?oxy_comment_end?>
        <listitem>
            <para>Select a <emphasis role="bold">Source type</emphasis>.</para>
        </listitem>
        <listitem>
            <para>Select a <emphasis role="bold">Data element</emphasis>.</para>
        </listitem>
        <listitem>
            <para>Click <emphasis role="bold">Save</emphasis>.</para>
        </listitem>
    </orderedlist>    
</section>

